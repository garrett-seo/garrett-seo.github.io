<div class="col">
  <div class="card h-100 hoverable">
    {% if project.img %}
      {%
        include figure.liquid
        loading="eager"
        path=project.img
        sizes = "250px"
        alt="project thumbnail"
        class="card-img-top"
      %}
    {% endif %}
    <div class="card-body">
      <h2 class="card-title">{{ project.title }}</h2>
      <p class="card-text">{{ project.description }}</p>
      
      {% if project.award %}
        <div class="award-badge mb-2">
          <span class="badge badge-pill badge-success">{{ project.award }}</span>
        </div>
      {% endif %}
      
      {% if project.date %}
        <p class="text-muted small">{{ project.date }}</p>
      {% endif %}
      
      <div class="row ml-1 mr-1 p-0 mt-2">
        <!-- GitHub/Code Link -->
        {% if project.github %}
          <div class="github-icon">
            <div class="icon" data-toggle="tooltip" title="Code Repository">
              <a href="{{ project.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
            </div>
            {% if project.github_stars %}
              <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                <i class="fa-solid fa-star"></i>
                <span id="{{ project.github_stars }}-stars"></span>
              </span>
            {% endif %}
          </div>
        {% elsif project.code %}
          <a href="{{ project.code }}" class="btn btn-sm z-depth-0 mr-1" role="button">Code</a>
        {% endif %}
        
        <!-- Poster Link -->
        {% if project.poster %}
          {% if project.poster contains '://' %}
            <a href="{{ project.poster }}" class="btn btn-sm z-depth-0 mr-1" role="button">Poster</a>
          {% else %}
            <a href="{{ project.poster | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0 mr-1" role="button">Poster</a>
          {% endif %}
        {% endif %}
        
        <!-- Slides Link -->
        {% if project.slides %}
          {% if project.slides contains '://' %}
            <a href="{{ project.slides }}" class="btn btn-sm z-depth-0 mr-1" role="button">Slides</a>
          {% else %}
            <a href="{{ project.slides | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0 mr-1" role="button">Slides</a>
          {% endif %}
        {% endif %}
        
        <!-- Award PDF Link -->
        {% if project.award_pdf %}
          {% if project.award_pdf contains '://' %}
            <a href="{{ project.award_pdf }}" class="btn btn-sm z-depth-0 mr-1" role="button">Award</a>
          {% else %}
            <a href="{{ project.award_pdf | prepend: '/assets/pdf/' | relative_url }}" class="btn btn-sm z-depth-0 mr-1" role="button">Award</a>
          {% endif %}
        {% endif %}
        
        <!-- Website Link -->
        {% if project.website %}
          <a href="{{ project.website }}" class="btn btn-sm z-depth-0 mr-1" role="button">Website</a>
        {% endif %}
        
        <!-- Project Page Link -->
        {% if project.redirect or project.url %}
          <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}" class="btn btn-sm z-depth-0 mr-1" role="button">Details</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
